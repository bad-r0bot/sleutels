<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#c1c8ce"
        android:orientation="vertical"
        android:weightSum="30">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="13"
            android:background="#c1c8ce"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#c1c8ce"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:autoText="false"
                    android:text="De Sleutelaar"
                    android:textColor="#0012b1"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:background="@mipmap/sleutelaar_logo" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="8dp"
            android:layout_weight="4"
            android:background="#c1c8ce"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/bedrijfInformatieTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0.14"
                android:text="@string/informatiebedrijf"
                android:textColor="#010000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/slotTitleTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:text="Sloten"
                android:textColor="#010000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/slotenInformatieKort"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.88"
                android:text="New Text"
                android:textColor="#010000"
                android:textIsSelectable="true"
                android:textSize="20dp"
                android:textStyle="italic" />


            <TextView
                android:id="@+id/Selecteer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="50dp"
                android:layout_weight="0.05"
                android:text="@string/selectLock"
                android:textColor="#010000"
                android:textIsSelectable="true"
                android:textSize="18dp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="13"
            android:background="#0000cc"
            android:orientation="horizontal"
            android:textColor="#ffffffff"
            android:weightSum="10">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="35px"
                android:layout_weight="3"
                android:popupBackground="#0000cc"
                android:spinnerMode="dropdown"
                android:textColor="#ffffffff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="7"
                android:background="#0000cc"
                android:onClick="goToSlotenPage"
                android:text="Meer informatie"
                android:textColor="#ffffffff"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
